<Window x:Class="Lesson2_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson2_6"
        mc:Ignorable="d"
        Title="Текстовой редактор" Height="450" Width="800" ResizeMode="NoResize" 
        Topmost="False" WindowState="Normal" Icon="./Resources/icon.png">

    <Grid>
        <TextBox x:Name="textBox" Width="782" Margin="10,10,10,100" FontSize="14" />

        <Button x:Name="Open" Content="Открыть" Click="OpenFile_Click" Margin="79,0,0,37" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100"/>
        <Button x:Name="Save" Content="Сохранить" Click="SaveFile_Click"  Margin="0,0,113,37" HorizontalAlignment="Right" Width="100" Height="30" VerticalAlignment="Bottom"/>
    </Grid>

</Window>
