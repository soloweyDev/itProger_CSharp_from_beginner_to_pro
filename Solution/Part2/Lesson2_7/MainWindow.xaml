<Window x:Class="Lesson2_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson2_7"
        mc:Ignorable="d"
        Title="Teкстовой редактор" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Приветствие">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Привет" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontWeight="Bold"/>
                </Grid>
            </TabItem>
            <TabItem Header="Кнопки">
                <Grid Background="#FFE5E5E5">
                    <RadioButton Content="Audi" GroupName="button"/>
                    <RadioButton Content="BMW" GroupName="button" Margin="0,30,0,0"/>
                    <RadioButton Content="Mersedes" GroupName="button" Margin="0,60,0,0"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
